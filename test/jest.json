{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": ["text-summary", "lcov"],
  "setupFiles": ["./setup-test.ts"]
}
